{
  "name": "Wefaves",
  "version": "0.0.2",
  "description": "Gestionnaire de session universel",
  "permissions": [
    "bookmarks",
    "unlimitedStorage",
    "tabs",
    "http://dev.wefaves.com/",
    "http://wefaves.com/",
    "cookies",
    "<all_urls>",
    "history"
  ],
  "browser_action": {
    "default_title": "Wefaves",
    "default_popup": "index.html"
  },
  "icons": {
    "48": "assets/img/icon_48x48.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
